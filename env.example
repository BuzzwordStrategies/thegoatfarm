# ========================================
# The GOAT Farm - Environment Configuration
# ========================================
# Copy this file to .env and fill in your actual API keys

# Coinbase CDP Format (New)
COINBASE_API_KEY_NAME=organizations/your-org-id/apiKeys/your-key-id
COINBASE_API_KEY_PRIVATE_KEY=-----BEGIN EC PRIVATE KEY-----
your-private-key-content-here
-----END EC PRIVATE KEY-----

# Coinbase Legacy Format (for backward compatibility)
COINBASE_API_KEY=your-coinbase-api-key
COINBASE_API_SECRET=your-coinbase-api-secret

# Twitter API (twitterapi.io)
TWITTER_API_KEY=your-twitterapi-io-key
TWITTER_API_BASE_URL=https://api.twitterapi.io/v1
TWITTERAPI_KEY=your-twitterapi-io-key

# TAAPI
TAAPI_SECRET=your-taapi-key

# ScrapingBee
SCRAPINGBEE_API_KEY=your-scrapingbee-key

# AI APIs
XAI_API_KEY=your-grok-key
PERPLEXITY_API_KEY=your-perplexity-key
ANTHROPIC_API_KEY=your-anthropic-claude-key

# Optional
COINDESK_API_URL=https://api.coindesk.com/v1

# Database encryption key (generate a 32-character key)
DB_ENCRYPTION_KEY=your-32-character-encryption-key-here 