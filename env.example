# Environment Configuration
NODE_ENV=development
PORT=3001
WS_PORT=3002

# API Keys (DO NOT COMMIT ACTUAL KEYS)
# Coinbase Advanced Trade API
COINBASE_KEY_NAME=your_coinbase_key_name_from_developer_platform
COINBASE_PRIVATE_KEY=your_coinbase_private_key_pem_format
# Example key name: 8f68***6d3c
# Private key should be in PEM format or raw base64

# CoinDesk
COINDESK_API_KEY=your_coindesk_api_key

# TAAPI.io
TAAPI_API_KEY=your_taapi_api_key

# Perplexity AI
PERPLEXITY_API_KEY=your_perplexity_api_key

# Grok
GROK_API_KEY=your_grok_api_key

# Anthropic Claude
ANTHROPIC_API_KEY=your_anthropic_api_key

# ScrapingBee
SCRAPINGBEE_API_KEY=your_scrapingbee_api_key

# TwitterAPI.io
TWITTERAPIIO_API_KEY=your_twitterapiio_api_key

# Security
MASTER_ENCRYPTION_KEY=generate_a_secure_32_char_key_here
JWT_SECRET=generate_another_secure_secret_here
INTERNAL_API_KEY=your_internal_api_key_for_service_communication

# Database
REDIS_URL=redis://localhost:6379
DATABASE_URL=sqlite:///data/trading.db

# Monitoring
SENTRY_DSN=your_sentry_dsn_for_error_tracking
LOG_LEVEL=info

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# CORS
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:3001

# Flask Configuration (for Python bots)
FLASK_APP=dashboard/app.py
FLASK_ENV=development
SECRET_KEY=your_flask_secret_key

# Trading Configuration
TRADING_ENABLED=true
PAPER_TRADING=true
MAX_POSITION_SIZE=1000
STOP_LOSS_PERCENTAGE=5
TAKE_PROFIT_PERCENTAGE=10

# Notification Settings
ENABLE_EMAIL_ALERTS=false
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASS=your_app_password
ALERT_EMAIL=alerts@yourdomain.com

# Performance
MAX_CONCURRENT_REQUESTS=10
REQUEST_TIMEOUT_MS=30000
WEBSOCKET_HEARTBEAT_INTERVAL=30000 